<h1>Sign In</h1>
<%= flash[:error] %>

<%= form_tag login_path do %>

    <%= label_tag :email %>
    <%= email_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>

    <%= submit_tag "Sign In" %>
<% end %>