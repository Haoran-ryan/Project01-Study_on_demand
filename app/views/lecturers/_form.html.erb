<% if @lecturer.errors.any? %>
    <ol>
        <% @lecturer.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ol>
<% end %>

<%= form_for @lecturer do |f| %>
    <%=f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%=f.label :email, "Email"%>
    <%= f.text_field :email %>

    <%= f.label :image %>
    <%= f.url_field :image %>

    <%= f.label :password  %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <br />
    <%= f.submit %>
<% end %>