<h1>All Students</h1>

<% @students.each do |student|%>
    <p>
        <%= image_tag student.image, :class =>'thumb student_image' if student.image.present? %>
        <ul>
            <li>Name: <%= link_to student.name, student %></li>
            <li>Email: <%= student.email %></li>
        </ul>
    </p>
<% end %>

